<!--
********************************************************

Schematron rules for ALIS-Connect case statistics (casestat) V1.0 (2.16.756.5.30.PlaceholderCaseStatV1)
Content rules for GrpInfo document

TODOs:
- Temporäre OIDs ersetzen

History:
13.03.2011: Tony Schaller, medshare GmbH (Initial draft)
20.03.2011: Tony Schaller, medshare GmbH (Abgabe an Auftraggeber zum Review)
25.03.2011: Tony Schaller, medshare GmbH (Abgabe an Projektteam ALIS-Connect CaseStat zum Review)
06.04.2011: Tony Schaller, medshare GmbH (Publikation in SVN Repository der HL7 Benutzergruppe Schweiz; Achtung: OIDs vorerst als Platzhalter)

********************************************************
-->
<pattern>
	<!-- Entity Information -->
	<xhtml:ul id="entity-alisconnect-casestat-grpinfo" xmlns:xhtml="http://www.w3.org/1999/xhtml">
		<xhtml:li class="filename">alisconnect-casestat-grpinfo.ent</xhtml:li>
		<xhtml:li class="version">1.0</xhtml:li>
	</xhtml:ul>
	<!--
	********************************************************
	Document Templates
	********************************************************
	-->
	<rule context="cda:ClinicalDocument">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect Case Statistics (casestat): GrpInfo CDA Document Templates</xhtml:h3>
		<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">Die nachfolgenden Regeln beschreiben die Prüfungen zum ALIS-Connect CaseStat "GrpInfo" CDA Dokument</xhtml:p>
		<!-- Document Templates prüfen -->
		<assert id="entity-alisconnect-casestat-grpinfo-0101" test="cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat-grpinfo.doc&quot;">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente müssen im CDA Header mit der TemplateID 'alisconnect.casestat-grpinfo.doc' deklariert sein (root OID: 2.16.756.5.30.PlaceholderCaseStatV1) </xhtml:p>
		</assert>
		<!-- Body Sections prüfen -->
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0102" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Soziodemographie&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Soziodemographie' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0103" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Eintrittsmerkmale&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Eintrittsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0104" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Aufenthaltsmerkmale&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Aufenthaltsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0105" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.BetriebswirtschaftlicheAngaben&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Betriebswirtschaftliche Angaben' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0106" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Austrittsmerkmale&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Austrittsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0107" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Diagnosenliste&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Diagnosenliste' enthalten</xhtml:p>
		</assert>
		<assert role="warning" id="entity-alisconnect-casestat-grpinfo-0108" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Behandlungsliste&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente sollten eine CDA Body Section 'Behandlungsliste' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpinfo-0109" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.NeugeborenenZusatzdaten&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente können eine CDA Body Section 'Neugeborenen-Zusatzdaten' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpinfo-0110" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.PsychiatrieZusatzdaten&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente können eine CDA Body Section 'Psychiatrie-Zusatzdaten' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpinfo-0111" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Wiedereintritte&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente können eine CDA Body Section 'Wiedereintritte' enthalten</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpinfo-0112" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGData&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo müssen eine CDA Body Section 'DRG Daten' enthalten</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpinfo-0113" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Bemerkungen&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect GrpInfo Dokumente müssen eine CDA Body Section 'Bemerkungen' enthalten</xhtml:p>
		</assert>
	</rule>
</pattern>
<pattern>
	<!--
	********************************************************
	DRG Daten: DRGDataInfoL3
	********************************************************
	-->
	<rule context="*[cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat.body.DRGDataInfoL3&quot;]">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect Case Statistics (casestat): CDA Body Level3 Template 'Strukturierte DRG Daten für GrpInfo'</xhtml:h3>
		<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">Die nachfolgenden Regeln beschreiben die Prüfungen zum CDA Body Entry 'Strukturierte DRG Daten für GrpInfo'</xhtml:p>
		<!-- Deklaration als Organizer -->
		<assert id="entity-alisconnect-casestat-grpinfo-0201" test="self::cda:organizer">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten müssen als 'organizer' im CDA Body (section 'DRG Daten') deklariert werden</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpinfo-0202" test="cda:code[@codeSystem=&quot;2.16.756.5.30.PlaceholderMSKPsychiatrieZusatzdatenKategorien&quot; and @code=&quot;4&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten müssen deklariert werden (Wert 4 aus der Wertetabelle '2.16.756.5.30.PlaceholderMSKPsychiatrieZusatzdatenKategorien')</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpinfo-0203" test="cda:component/cda:observation/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGStatusL3&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten müssen die Information, ob ein Behandlungsfall über DRG abgerechnet worden ist, enthalten (Template 'alisconnect.casestat.body.DRGStatusL3')</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpinfo-0204" test="cda:component/cda:substanceAdministration/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.MediL3&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten können hochteure Medikamente enthalten (Template 'alisconnect.casestat.body.MediL3')</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpinfo-0205" test="cda:component/cda:observation/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGFallgruppeL3&quot;]">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten können die DRG Fallgruppe enthalten (Template 'alisconnect.casestat.body.DRGFallgruppeL3')</xhtml:p>
		</assert>
	</rule>
</pattern>
<pattern>
	<!--
	********************************************************
	DRG Daten
	********************************************************
	-->
	<rule context="*[cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat.body.DRGData&quot;]">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">ALIS-Connect Case Statistics (casestat): CDA Body Template 'DRG Daten'</xhtml:h3>
		<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">Die nachfolgenden Regeln beschreiben die Prüfungen zum CDA Body Element 'DRG Daten'</xhtml:p>
		<assert id="entity-alisconnect-casestat-grpinfo-0301" test="(cda:title=&quot;DRG Daten&quot; and //cda:languageCode/@code=&quot;de-CH&quot;) or //cda:languageCode/@code!=&quot;de-CH&quot;">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten müssen einen section title 'DRG Daten' enthalten</xhtml:p>
		</assert>
		<!-- Fallnummer -->
		<assert id="entity-alisconnect-casestat-grpinfo-0302" test="cda:entry/cda:encounter/cda:id">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">DRG Daten: Die Fallnummer muss in einem Encounter Entry als 'id' deklariert werden</xhtml:p>
		</assert>
		<!-- GrpInfo: DRG Daten im Body Level 3 -->
		<assert id="entity-alisconnect-casestat-grpinfo-0303" test="(/cda:ClinicalDocument/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot;]/@extension!=&quot;alisconnect.casestat-grpinfo.doc&quot;) or (/cda:ClinicalDocument/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot;]/@extension=&quot;alisconnect.casestat-grpinfo.doc&quot; and cda:entry/cda:organizer/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGDataInfoL3&quot;])">
			<xhtml:p lang="de_ch" xmlns:xhtml="http://www.w3.org/1999/xhtml">GrpInfo: DRG Daten müssen mit dem Template 'alisconnect.casestat.body.DRGDataInfoL3' deklariert werden</xhtml:p>
		</assert>
	</rule>
</pattern>
