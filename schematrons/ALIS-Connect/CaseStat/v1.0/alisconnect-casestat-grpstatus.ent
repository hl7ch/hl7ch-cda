<pattern>
	<!-- Entity Information -->
	<xhtml:ul id="entity-alisconnect-casestat-grpstatus">
		<xhtml:li class="filename">alisconnect-casestat-grpstatus.ent</xhtml:li>
		<xhtml:li class="version">1.0</xhtml:li>
	</xhtml:ul>
	<!--
	********************************************************
	Document Templates
	********************************************************
	-->
	<rule context="cda:ClinicalDocument">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch">ALIS-Connect Case Statistics (casestat): GrpStatus CDA Document Templates</xhtml:h3>
		<xhtml:p lang="de_ch">Die nachfolgenden Regeln beschreiben die Prüfungen zum ALIS-Connect CaseStat "GrpStatus" CDA Dokument</xhtml:p>
		<!-- Document Templates prüfen -->
		<assert id="entity-alisconnect-casestat-grpstatus-0101" test="cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat-grpstatus.doc&quot;">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente müssen im CDA Header mit der TemplateID 'alisconnect.casestat-grpstatus.doc' deklariert sein (root OID: 2.16.756.5.30.PlaceholderCaseStatV1) </xhtml:p>
		</assert>
		<!-- Body Sections prüfen -->
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0102" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Soziodemographie&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Soziodemographie' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0103" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Eintrittsmerkmale&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Eintrittsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0104" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Aufenthaltsmerkmale&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Aufenthaltsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0105" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.BetriebswirtschaftlicheAngaben&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Betriebswirtschaftliche Angaben' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0106" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Austrittsmerkmale&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Austrittsmerkmale' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0107" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Diagnosenliste&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Diagnosenliste' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0108" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Behandlungsliste&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Behandlungsliste' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0109" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.NeugeborenenZusatzdaten&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Neugeborenen-Zusatzdaten' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0110" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.PsychiatrieZusatzdaten&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Psychiatrie-Zusatzdaten' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0111" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Wiedereintritte&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Wiedereintritte' enthalten</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0112" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGData&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus müssen eine CDA Body Section 'DRG Daten' enthalten</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0113" test="cda:component/cda:structuredBody/cda:component/cda:section/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.Bemerkungen&quot;]">
			<xhtml:p lang="de_ch">ALIS-Connect GrpStatus Dokumente können eine CDA Body Section 'Bemerkungen' enthalten</xhtml:p>
		</assert>
	</rule>
</pattern>
<pattern>
	<!--
	********************************************************
	DRG Daten: DRGDataStatusL3
	********************************************************
	-->
	<rule context="*[cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat.body.DRGDataStatusL3&quot;]">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch">ALIS-Connect Case Statistics (casestat): CDA Body Level3 Template 'Strukturierte DRG Daten für GrpStatus'</xhtml:h3>
		<xhtml:p lang="de_ch">Die nachfolgenden Regeln beschreiben die Prüfungen zum CDA Body Entry 'Strukturierte DRG Daten für GrpStatus'</xhtml:p>
		<!-- Deklaration als Organizer -->
		<assert id="entity-alisconnect-casestat-grpstatus-0201" test="self::cda:organizer">
			<xhtml:p lang="de_ch">DRG Daten müssen als 'organizer' im CDA Body (section 'DRG Daten') deklariert werden</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0202" test="cda:code[@codeSystem=&quot;2.16.756.5.30.PlaceholderMSKPsychiatrieZusatzdatenKategorien&quot; and @code=&quot;4&quot;]">
			<xhtml:p lang="de_ch">DRG Daten müssen deklariert werden (Wert 4 aus der Wertetabelle '2.16.756.5.30.PlaceholderMSKPsychiatrieZusatzdatenKategorien')</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0203" test="cda:component/cda:observation/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGStatusL3&quot;]">
			<xhtml:p lang="de_ch">DRG Daten müssen die Information, ob ein Behandlungsfall über DRG abgerechnet worden ist, enthalten (Template 'alisconnect.casestat.body.DRGStatusL3')</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0204" test="cda:component/cda:substanceAdministration/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.MediL3&quot;]">
			<xhtml:p lang="de_ch">DRG Daten können hochteure Medikamente enthalten (Template 'alisconnect.casestat.body.MediL3')</xhtml:p>
		</assert>
		<assert role="information" id="entity-alisconnect-casestat-grpstatus-0205" test="cda:component/cda:observation/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGFallgruppeL3&quot;]">
			<xhtml:p lang="de_ch">DRG Daten können die DRG Fallgruppe enthalten (Template 'alisconnect.casestat.body.DRGFallgruppeL3')</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0206" test="cda:component/cda:observation/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGCodierStatusL3&quot;]">
			<xhtml:p lang="de_ch">DRG Daten müssen den Status der DRG Codierung enthalten (Template 'alisconnect.casestat.body.DRGCodierStatusL3')</xhtml:p>
		</assert>
	</rule>
</pattern>
<pattern>
	<!--
	********************************************************
	DRG Daten: DRGCodierStatusL3
	********************************************************
	-->
	<rule context="*[cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat.body.DRGCodierStatusL3&quot;]">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch">ALIS-Connect Case Statistics (casestat): CDA Body Level3 Template 'DRG Daten: Codierstatus'</xhtml:h3>
		<xhtml:p lang="de_ch">Die nachfolgenden Regeln beschreiben die Prüfungen zum CDA Body Entry 'DRG Daten: Codierstatus'</xhtml:p>
		<assert id="entity-alisconnect-casestat-grpstatus-0301" test="cda:code[@codeSystem=&quot;2.16.756.5.30.PlaceholderCaseStatDataCat&quot; and @code=&quot;S&quot;]">
			<xhtml:p lang="de_ch">DRG Daten müssen als Codierstatus deklariert werden (Wert 'S' aus der Wertetabelle '2.16.756.5.30.PlaceholderCaseStatDataCat')</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0302" test="cda:value[@xsi:type=&quot;CE&quot; and @codeSystem=&quot;2.16.756.5.30.PlaceholderCaseStatCodingStatus&quot; and @code=document(&quot;../../../../schematrons/ALIS-Connect/CaseStat/v1.0/alisconnect-casestat-voc.xml&quot;)/systems/system[@root=&quot;2.16.756.5.30.PlaceholderCaseStatCodingStatus&quot;]/code/@value]">
			<xhtml:p lang="de_ch">DRG Daten müssen einen Codierstatus enthalten (gültiger Wert aus der Wertetabelle '2.16.756.5.30.PlaceholderCaseStatCodingStatus')</xhtml:p>
		</assert>
		<assert id="entity-alisconnect-casestat-grpstatus-0303" test="cda:value[@xsi:type=&quot;INT&quot; and @value&gt;=0 and @value&lt;=999]">
			<xhtml:p lang="de_ch">DRG Daten müssen angeben, wie viele Codierdurchgänge vor dem aktuellen Durchlauf schon stattgefunden haben (vgl. Implementierungsleitfaden, Kapitel "5.2.4 Status")</xhtml:p>
		</assert>
	</rule>
</pattern>
<pattern>
	<!--
	********************************************************
	DRG Daten
	********************************************************
	-->
	<rule context="*[cda:templateId/@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and cda:templateId/@extension=&quot;alisconnect.casestat.body.DRGData&quot;]">
		<!-- Rule Documentation -->
		<xhtml:h3 lang="de_ch">ALIS-Connect Case Statistics (casestat): CDA Body Template 'DRG Daten'</xhtml:h3>
		<xhtml:p lang="de_ch">Die nachfolgenden Regeln beschreiben die Prüfungen zum CDA Body Element 'DRG Daten'</xhtml:p>
		<assert id="entity-alisconnect-casestat-grpstatus-0401" test="(cda:title=&quot;DRG Daten&quot; and //cda:languageCode/@code=&quot;de-CH&quot;) or //cda:languageCode/@code!=&quot;de-CH&quot;">
			<xhtml:p lang="de_ch">DRG Daten müssen einen section title 'DRG Daten' enthalten</xhtml:p>
		</assert>
		<!-- Fallnummer -->
		<assert id="entity-alisconnect-casestat-grpstatus-0402" test="cda:entry/cda:encounter/cda:id">
			<xhtml:p lang="de_ch">DRG Daten: Die Fallnummer muss in einem Encounter Entry als 'id' deklariert werden</xhtml:p>
		</assert>
		<!-- GrpStatus: DRG Daten im Body Level 3 -->
		<assert id="entity-alisconnect-casestat-grpstatus-0403" test="(/cda:ClinicalDocument/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot;]/@extension!=&quot;alisconnect.casestat-grpstatus.doc&quot;) or (/cda:ClinicalDocument/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot;]/@extension=&quot;alisconnect.casestat-grpstatus.doc&quot; and cda:entry/cda:organizer/cda:templateId[@root=&quot;2.16.756.5.30.PlaceholderCaseStatV1&quot; and @extension=&quot;alisconnect.casestat.body.DRGDataStatusL3&quot;])">
			<xhtml:p lang="de_ch">GrpStatus: DRG Daten müssen mit dem Template 'alisconnect.casestat.body.DRGDataStatusL3' deklariert werden</xhtml:p>
		</assert>
	</rule>
</pattern>
