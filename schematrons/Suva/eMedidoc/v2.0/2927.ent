	<rule context='cda:ClinicalDocument'>
		<!-- Rule Documentation -->
		<xhtml:h3 lang='de_ch'>Suva Arztzeugnis UVG: CDA Header</xhtml:h3>
		<xhtml:p lang='de_ch'>Die nachfolgenden Regeln beschreiben die CDA Header Prüfungen für das Suva Arztzeugnis</xhtml:p>
		<xhtml:h3 lang='fr_ch'>Suva certificat de médecin UVG: CDA Header</xhtml:h3>
		<xhtml:p lang='fr_ch'>Les règles suivantes décrivent les contrôles 'CDA Header' pour le certificat de médecin UVG Suva</xhtml:p>
		<!--
		<xhtml:h3 lang='it_ch'>totranslate: italiano</xhtml:h3>
		<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
		-->

		<!-- Formularnummer prüfen -->
		<assert id='suva-form-2927-0001' test='//cda:templateId/@extension="2927"'>
			<xhtml:p lang='de_ch'>Die Formularnummer für Suva Arztzeugnis UVG muss lauten: 2927</xhtml:p>
			<xhtml:p lang='fr_ch'>Le numéro de formulaire pour le rapport médical initial LAA de la Suva doit être: 2927</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<!-- code prüfen -->
		<assert id='suva-form-2927-0002' test='//cda:code/@code="51848-0"'>
			<xhtml:p lang='de_ch'>Der LOINC Code für das Suva Arztzeugnis UVG muss lauten: 51848-0 (Assessment note)</xhtml:p>
			<xhtml:p lang='fr_ch'>Le code LOINC pour le rapport médical initial LAA de la Suva doit être: 51848-0 (Assessment note)</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<!-- title prüfen -->
		<assert id='suva-form-2927-0003' test='(//cda:title="Arztzeugnis UVG" and //cda:languageCode/@code="de-CH") or //cda:languageCode/@code!="de-CH"'>
			<xhtml:p lang='de_ch'>Der deutsche Titel muss lauten 'Arztzeugnis UVG'</xhtml:p>
			<xhtml:p lang='fr_ch'>Le titre français doit être ’Rapport médical initial LAA’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<!-- Arbeitgeber prüfen -->
		<assert id='suva-form-2927-0004' test='//cda:participant/cda:templateId[@root="2.16.756.5.30.1.1.1.1.1" and @extension="CDA-CH.Head.Empl"]'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss einen Arbeitgeber enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir un employeur</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>

		<!--
		********************************************************
		Aufbau des Dokuments (Existenz der Sections prüfen)
		********************************************************
		-->
		<assert id='suva-form-2927-0005' test='//cda:templateId/@root="2.16.756.5.30.1.100.2.2.1" and //cda:templateId/@extension="eMedidoc.SchadenInfo"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Schadeninformationen' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Informations sur le sinistre’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0006' test='//cda:templateId/@root="2.16.756.5.30.1.100.2" and //cda:templateId/@extension="Suva.2927.AngabenPat"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Angaben des Patienten' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Indications du patient’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0007' test='//cda:templateId/@root="2.16.756.5.30.1.100.2" and //cda:templateId/@extension="Suva.2927.Allgemeinzustand"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Allgemeinzustand' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Etat général’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0008' test='//cda:templateId/@root="2.16.756.5.30.1.100.2" and //cda:templateId/@extension="Suva.2927.Befund"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Befund' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Constatations’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0009' test='//cda:templateId/@root="2.16.756.5.30.1.1.1.1.1" and //cda:templateId/@extension="CDA-CH.Body.DiagList"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Diagnosen' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Diagnostics’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0010' test='//cda:templateId/@root="2.16.756.5.30.1.100.2" and //cda:templateId/@extension="Suva.2927.Kausalität"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Kausalität' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva de la Suva doit contenir une section ’Causalité’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0011' test='//cda:templateId/@root="2.16.756.5.30.1.100.2" and //cda:templateId/@extension="Suva.2927.Therapie"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Therapie' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Thérapie’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0012' test='//cda:templateId/@root="2.16.756.5.30.1.1.1.1.1" and //cda:templateId/@extension="CDA-CH.Body.ArbeitsfähigkeitList"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Arbeitsfähigkeit' enthalten</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Capacité de travail’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0013' role='information' test='//cda:templateId/@root="2.16.756.5.30.1.100.2.2.1" and //cda:templateId/@extension="eMedidoc.BehAbschluss"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG enthält keine Section 'Behandlungsabschluss'</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva ne contient pas de section ’Traitement terminé’</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
		<assert id='suva-form-2927-0014' test='//cda:templateId/@root="2.16.756.5.30.1.100.2.2.1" and //cda:templateId/@extension="eMedidoc.Rem"'>
			<xhtml:p lang='de_ch'>Das Suva Arztzeugnis UVG muss eine Section 'Bemerkungen' enthalten (mit Erwerbstatus. Wenn keine Bemerkungen, dann 'Keine' angeben).</xhtml:p>
			<xhtml:p lang='fr_ch'>Le rapport médical initial LAA de la Suva doit contenir une section ’Remarques’ (même s’il n’y a pas de remarques – indiquer alors ’Aucune’).</xhtml:p>
			<!--
			<xhtml:p lang='it_ch'>totranslate: italiano</xhtml:p>
			-->
		</assert>
	</rule>

