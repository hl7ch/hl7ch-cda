<pattern name='Template_1.3.6.1.4.1.19376.1.5.3.1.1.6'>
	<rule context='*[cda:templateId/@root="1.3.6.1.4.1.19376.1.5.3.1.1.5"]'>
		<!--
		********************************************************
		Errors
		********************************************************
		-->
		<!-- Verify that the template id is used on the appropriate type of object -->
		<assert role='error' test='../cda:ClinicalDocument'>
			The PHR Update can only be used on Clinical Documents.
		</assert>
		<!-- Verify that the parent templateId is also present. -->
		<assert role='error' test='cda:templateId[@root="1.3.6.1.4.1.19376.1.5.3.1.1.2"]'>
			The parent template identifier for PHR Update is not present.
		</assert>
		<!-- Verify the document type code -->
		<assert role='error' test='cda:code[@code = "34133-9"]'>
			The document type code of a PHR Update must be 34133-9
		</assert>
		<assert role='error' test='cda:code[@codeSystem = "2.16.840.1.113883.6.1"]'>
			The document type code must come from the LOINC code
			system (2.16.840.1.113883.6.1).
		</assert>
	</rule>

	<!--
	********************************************************
	Warnings
	********************************************************
	-->

	<!--
	********************************************************
	Informations
	********************************************************
	-->

</pattern>
