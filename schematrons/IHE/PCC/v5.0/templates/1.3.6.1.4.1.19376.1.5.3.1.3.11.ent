<pattern name='Template_1.3.6.1.4.1.19376.1.5.3.1.3.11'>
	<rule context='*[cda:templateId/@root="1.3.6.1.4.1.19376.1.5.3.1.3.11"]'>
		<!-- Verify that the template id is used on the appropriate type of object -->
		<assert role='error' test='../cda:section'>
			The List of Surgeries can only be used on sections.
		</assert>
		<!-- Verify that the parent templateId is also present. -->
		<assert role='error' test='cda:templateId[@root="2.16.840.1.113883.10.20.1.12"]'>
			The parent template identifier for List of Surgeries is not present.
		</assert>
		<!-- Verify the section type code -->
		<assert role='error' test='cda:code[@code = "47519-4"]'>
			The section type code of a List of Surgeries must be 47519-4
		</assert>
		<assert role='error' test='cda:code[@codeSystem = "2.16.840.1.113883.6.1"]'>
			The section type code must come from the LOINC code
			system (2.16.840.1.113883.6.1).
		</assert>
	</rule>
</pattern>
