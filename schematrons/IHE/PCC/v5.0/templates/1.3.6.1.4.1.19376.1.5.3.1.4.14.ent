<!--  IHE PCC v3.0 Family Medical History: 1.3.6.1.4.1.19376.1.5.3.1.3.14 -->

<!-- errors -->

<pattern id="p-1.3.6.1.4.1.19376.1.5.3.1.3.14-errors">
	<title>IHE PCC v3.0 Family Medical History - errors validation phase</title>

	<rule context='*[cda:templateId/@root="1.3.6.1.4.1.19376.1.5.3.1.3.14"]'>
		<!-- Verify that the template id is used on the appropriate type of
		object -->
		<assert role='error' test='../cda:section'>
			The Family Medical History can only be used on sections.
		</assert>
		<!-- Verify that the parent templateId is also present. -->
		<assert role='error' test='cda:templateId[@root="2.16.840.1.113883.10.20.1.4"]'>
			The parent template identifier for Family Medical History is not
			present.
		</assert>
		<!-- Verify the section type code -->
		<assert role='error' test='cda:code[@code = "10157-6"]'>
			The section type code of a Family Medical History must be 10157-6
		</assert>
		<assert role='error' test='cda:code[@codeSystem = "2.16.840.1.113883.6.1"]'>
			The section type code must come from the LOINC code
			system (2.16.840.1.113883.6.1).
		</assert>
	</rule>
</pattern>

