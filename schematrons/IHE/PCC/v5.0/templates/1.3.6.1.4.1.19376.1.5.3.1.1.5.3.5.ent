<pattern name='Template_1.3.6.1.4.1.19376.1.5.3.1.1.5.3.5'>
	<rule context='*[cda:templateId/@root="1.3.6.1.4.1.19376.1.5.3.1.1.5.3.5"]'>
		<!-- Verify that the template id is used on the appropriate type of object -->
		<assert role='error' test='../cda:section'>
			The Medical Devices can only be used on sections.
		</assert>
		<!-- Verify that the parent templateId is also present. -->
		<assert role='error' test='cda:templateId[@root="2.16.840.1.11383.10.20.1.7"]'>
			The parent template identifier for Medical Devices is not present.
		</assert>
		<!-- Verify the section type code -->
		<assert role='error' test='cda:code[@code = "46264-8"]'>
			The section type code of a Medical Devices must be 46264-8
		</assert>
		<assert role='error' test='cda:code[@codeSystem = "2.16.840.1.113883.6.1"]'>
			The section type code must come from the LOINC code
			system (2.16.840.1.113883.6.1).
		</assert>
	</rule>
</pattern>
